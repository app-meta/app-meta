{
    "name": "client",
    "appId": "org.app-mete",
    "appName": "APP 元宇宙",
    "version": "1.0.1",
    "description": "",
    "main": "src/index.js",
    "scripts": {
        "test:env": "env-cmd -e dev node test/env.test.js",
        "start": "env-cmd -e dev electron src/index.js",
        "start:win": "chcp 65001 && env-cmd -e dev electron src/index.js",
        "watch": "nodemon --watch src/index.js --exec \"env-cmd -e dev electron src/index.js\"",
        "watch:win": "chcp 65001 && nodemon --watch src/index.js --exec \"env-cmd -e dev electron src/index.js\"",
        "package": "electron-builder --dir",
        "package:dist": "electron-builder"
    },
    "keywords": [],
    "author": "0604hx <zxingming@foxmail.com>",
    "license": "MIT",
    "dependencies": {
        "@app-meta/basic": "workspace:1.0.0",
        "axios": "^1.8.4",
        "blueimp-md5": "^2.19.0",
        "dayjs": "^1.11.10",
        "fastify": "^4.24.3",
        "form-data": "^4.0.0",
        "iconv-jschardet": "^2.0.32",
        "minimist": "^1.2.8",
        "mustache": "^4.2.0",
        "node-notifier": "^10.0.1",
        "node-rsa": "^1.1.1",
        "node-schedule": "^2.1.1",
        "tracer": "^1.3.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.4",
        "electron": "28.0.0",
        "electron-builder": "^24.9.1",
        "env-cmd": "^10.1.0",
        "nodemon": "^3.0.2"
    },
    "build": {
        "appId": "org.app-mete",
        "productName": "APP元宇宙",
        "artifactName": "${productName}.${ext}",
        "copyright": "Copyright © 2009-2023 集成显卡",
        "asar": true,
        "compression": "maximum",
        "asarUnpack": [
            "./node_modules/node-notifier/**/*"
        ],
        "extraResources": [
            {
                "from": "./resources/icon",
                "to": "icon"
            }
        ],
        "files": [
            "src/**/*",
            "www/**/*"
        ],
        "win": {
            "icon": "../ui/public/icons.png",
            "target": [
                {
                    "target": "7z",
                    "arch": [
                        "ia32"
                    ]
                }
            ]
        }
    }
}
